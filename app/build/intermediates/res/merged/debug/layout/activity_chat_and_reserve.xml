<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffc313"
    tools:context="com.example.randy.to_be_determined.ChatAndReserveActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME LEFT TO EXCHANGE SPOT"
        android:gravity="center"
        android:id="@+id/textView1"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_below="@id/textView1"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:text="CHAT"
        android:textColor="#000000"

        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:text=""
        android:background="@drawable/round_edit_text"
        android:id="@+id/textView2"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textSize="15sp"
        android:scrollbars="vertical"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:textColor="#000000"
        android:background="@drawable/round_edit_text"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:hint="Type your message here"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/buttonSend"
        android:background="@drawable/rounded_button_black"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignEnd="@+id/textView1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve"
        android:id="@+id/buttonReserve"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_green_action"/>


</RelativeLayout>
