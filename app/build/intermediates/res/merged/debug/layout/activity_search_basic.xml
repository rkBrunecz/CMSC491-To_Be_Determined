<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffc313">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffc313">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarMain"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:layout_alignParentStart="true"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="MAP"
                    android:id="@+id/searchMapBtn"
                    android:background="@drawable/rounded_button_green_action"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="BASIC SEARCH"
                    android:textColor="#ffffff"
                    android:id="@+id/basicSearch"
                    android:textSize="25dp"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AVAILABLE SPOTS"
            android:id="@+id/availableSpots"
            android:textSize="40dp"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="AOK\nLIBRARY"
                android:id="@+id/libraryTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="UNIVERSITY\nCENTER"
                android:id="@+id/uniCenTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="MATH AND\nPSYCHOLOGY"
                android:id="@+id/mathTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:paddingTop="5dp">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/libraryBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/uniCenBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/mathBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:layout_gravity="center"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="BIOLOGICAL\nSCIENCE"
                android:id="@+id/bioTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SHERMAN\nHALL"
                android:id="@+id/shermanTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="FINE\nARTS"
                android:id="@+id/fineTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:paddingTop="5dp">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/bioBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/shermanBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/fineBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:layout_gravity="center"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ENGINEERING"
                android:id="@+id/engiTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="INFORMATION\nTECHNOLOGY"
                android:id="@+id/infoTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="PERFORMING\nARTS AND\nHUMANITIES"
                android:id="@+id/performingTxt"
                android:textSize="14dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:measureWithLargestChild="false"
            android:baselineAligned="false"
            android:paddingBottom="20dp"
            android:paddingTop="5dp">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/engiBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/infoBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="@drawable/rounded_button_black"
                android:id="@+id/performingBtn"
                android:textSize="35dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>