<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffc313">

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/enterEmailEdit"
        android:hint="Enter UMBC email..."
        android:fontFamily="@string/abc_search_hint"
        android:editable="true"
        android:background="@drawable/round_edit_text"
        android:textSize="28dp"
        android:layout_marginTop="59dp"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enterUserEdit" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/enterUserEdit"
        android:hint="Enter username..."
        android:fontFamily="@string/abc_search_hint"
        android:editable="true"
        android:background="@drawable/round_edit_text"
        android:textSize="28dp"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/enterEmailEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/enterPassEdit"
        android:hint="Enter password..."
        android:fontFamily="@string/abc_search_hint"
        android:editable="true"
        android:background="@drawable/round_edit_text"
        android:textSize="28dp"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/enterUserEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPassEdit"
        android:hint="Confirm password..."
        android:fontFamily="@string/abc_search_hint"
        android:editable="true"
        android:background="@drawable/round_edit_text"
        android:textSize="28dp"
        android:textCursorDrawable="@null"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/enterPassEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter valid UMBC email address"
        android:id="@+id/enterEmailTxt"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/enterEmailEdit"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your password"
        android:id="@+id/enterPassTxt"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/enterUserEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a username"
        android:id="@+id/enterUsernameTxt"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/enterEmailEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm your password (case sensitive)"
        android:id="@+id/confirmPassTxt"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/enterPassEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createAccountBtn"
        android:background="@drawable/rounded_button_green"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:clickable="false"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/confirmPassEdit"
        android:layout_alignEnd="@+id/enterEmailTxt"
        android:layout_alignStart="@+id/confirmPassEdit" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelBtn"
        android:background="@drawable/rounded_button_red"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:clickable="false"
        android:layout_below="@+id/createAccountBtn"
        android:layout_alignStart="@+id/createAccountBtn"
        android:layout_alignEnd="@+id/enterEmailTxt"
        android:layout_marginTop="10dp" />

</RelativeLayout>