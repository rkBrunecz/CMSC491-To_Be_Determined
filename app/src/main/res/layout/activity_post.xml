<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffc313">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#ffc313">

        <Button
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:text="Camera"
            android:id="@+id/button"
            android:background="@drawable/rounded_button_black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp" />

        <ImageView
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:text="X"
            android:id="@+id/imageView"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/spinner"
            android:background="@drawable/rounded_spinner"
            android:popupBackground="#FFFFFFFF"
            android:layout_below="@+id/textView"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="170dp"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/spinner2"
            android:background="@drawable/rounded_spinner"
            android:popupBackground="#FFFFFFFF"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/spinner"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:id="@+id/textView"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="24dp"
            android:focusable="true"
            android:layout_alignStart="@+id/spinner"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLOOR"
            android:id="@+id/textView2"
            android:textSize="24dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:focusable="true"
            android:layout_below="@+id/spinner"
            android:layout_alignStart="@+id/spinner2"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:id="@+id/textView3"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/editText"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:background="@drawable/round_edit_text"
            android:layout_marginTop="5dp"
            android:hint="ENTER A SHORT DESCRIPTION..."
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHARGING POINT"
            android:id="@+id/checkBox"
            android:checked="false"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/button2"
            android:layout_marginTop="5dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WINDOW SEAT"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:textSize="@dimen/abc_dialog_padding_top_material"
            android:layout_below="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox" />

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="POST"
            android:id="@+id/button2"
            android:background="@drawable/rounded_button_black"
            android:focusable="true"
            android:textColor="#feffffff"
            android:textSize="32dp"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEY FEATURES:"
            android:id="@+id/textView5"
            android:layout_below="@+id/button2"
            android:layout_alignStart="@+id/checkBox"
            android:layout_marginTop="30dp"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST "
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="64dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </RelativeLayout>
</ScrollView>
