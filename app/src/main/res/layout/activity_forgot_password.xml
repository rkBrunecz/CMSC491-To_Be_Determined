<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.randy.to_be_determined.ForgotPasswordActivity"
    android:background="#ffc313">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spotSwapForgot"
        android:text="SPOTSWAP"
        android:textSize="60dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER USERNAME"
        android:id="@+id/plainUsername"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/spotSwapForgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/editUser"
        android:textSize="24dp"
        android:textColor="#000000"
        android:background="@drawable/round_edit_text"
        android:hint="Ex: me"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/plainUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLength="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER EMAIL"
        android:id="@+id/plainEmail"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/editUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/editEmail"
        android:textSize="24dp"
        android:textColor="#000000"
        android:background="@drawable/round_edit_text"
        android:hint="Ex: me@umbc.edu"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/plainEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLength="30" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Get Password"
        android:id="@+id/getPassBtn"
        android:background="@drawable/rounded_button_green"
        android:textSize="24dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editEmail"
        android:layout_marginTop="20dp" />

</RelativeLayout>
